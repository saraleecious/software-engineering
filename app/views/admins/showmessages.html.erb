<html>
  <head>
    <%javascript_include_tag :defaults%>
  </head>
  <h1>Listing Messages</h1>

  <table>

    <% if @message != nil %>
      <% @message.each do |message| %>

        <table align="center" bgcolor="#66f5fa" width="100%" border="1" cellspacing="0" cellpadding="0">

          <tr><td>
              <b>Subject:</b>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<%= message.title %><br></br>
              <b>From:</b>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<br></br>
              <b>Received at:</b>&nbsp;&nbsp;<%= message.send_time %></td>
          </tr>
        </table>
        <table align="center" width="100%" border="1" cellspacing="0" cellpadding="0">
          <tr><td>
              <div id="padded">
                <br></br>
                <%= message.content %><br></br>
                <br></br>
              </div>
            </td></tr>
        </table>
      <% end %>
 
  <% end %>
  </table>

  <td><a href="deleteallmessages">Delete all messages</a></td>

  <div id="active_result"></div>

  <p style="color: green;font-size:large;"><%= flash[:notice] %></p>
  <p style="color: red"><%= flash[:error] %></p>
  <p style="color: orange"><%= flash[:warning] %></p>

</html>

